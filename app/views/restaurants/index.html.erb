<div class="container">
  <h1>Here's all your restaurants</h1>
  <hr>
  </br>
    <div class="row">
      <div class="card-group d-flex justify-content-between">
        <% @restaurants.each do |restaurant|%>
          <div class="card ml-3" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= restaurant.name %></h5>
              <div class="btn btn-primary">
                <%= link_to 'See details', restaurant_path(restaurant.id), :class => "btn btn-primary" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>
<hr>
<div class="container">
  <%= link_to 'Add Restaurant', new_restaurant_path, :class => "btn btn-primary" %>
</div>
