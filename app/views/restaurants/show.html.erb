<div class="container">
  <h2><%= @restaurant.name %></h2>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.category %></p>
  <p><% @restaurant.reviews.each do |review| %></p>
  <%= review.content %>
  <%= review.rating %>
  <% end %>
</div>
<hr>
<div class="container">
  <%= link_to 'Add Review', new_restaurant_review_path(@restaurant), :class => "btn btn-primary" %>
</div>
<hr>
<div class="container">
<%= link_to "Back to Restaurants", restaurants_path %>
</div>




